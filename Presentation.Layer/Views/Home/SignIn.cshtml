@{
}
@model Data.Access.Layer.Models.Employee


@{
    ViewData["Title"] = "Search";
}

@using (Html.BeginForm("SignIn", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h1>Create</h1>

    <h4>User</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="show">
                <div class="text-danger"> @Html.ValidationSummary(false)</div>


                <div class="form-group">
                    <label asp-for="FirstName"  class="control-label"></label>
                    <input type="text" name="fn" class="form-control" />
                    @*<span asp-validation-for="FirstName" class="text-danger"></span>*@
                </div>


                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input type="text" name="ln" class="form-control"  />
                    @*<span asp-validation-for="LastName" class="text-danger"></span>*@
                </div>
                

                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" asp-action="show" />
                </div>
            </form>



        </div>
    </div>

    
}