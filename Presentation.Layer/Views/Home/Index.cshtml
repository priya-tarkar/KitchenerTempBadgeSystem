@inject SignInManager<IdentityUser> signInManager;
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid home" >
    <div>
        <nav class="navbar navbar-expand-lg bg-primary navbar-dark homeNav">
            <ul class="navbar-nav">
                @if (signInManager.IsSignedIn(User))
                {
                    <li class="nav-item active">
                        <a class="nav-link HomeLink" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link HomeLink" asp-action="BadgeQueuePage">Badge Queue</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link HomeLink" asp-action="BadgeOutPage">Badge Out</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link HomeLink" asp-action="BadgeReportPage">Badge Report</a>
                    </li>
                }
                else
                {
                    <li class="nav-item active">
                        <a class="nav-link HomeLink" asp-action="Index">Home</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
    <div class="Sign">
        <div class="SignIn">
            <a asp-action="SignIn" class="btn btn-primary btn-lg" style="background:#073642;width:150px">Sign In</a>
        </div>
        <div class="SignOut">
            <a asp-action="SignOutPage" class="btn btn-primary btn-lg" style="background:#073642">Sign Out</a>
        </div>

