

@model Data.Access.Layer.Models.LoginViewModel


@{
    ViewBag.Title = "User Login";
}

<h1>Login Page</h1>

<div>
    <div>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Email" style="font-size:20px"></label>
                <input asp-for="Email"   />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password" style="font-size:20px;margin-top:18px"></label>
                <input asp-for="Password" class="form-control" style="margin-top:8px;width:200px" />
                <span asp-validation-for="Password"></span>
            </div>
            
            


            <button type="submit" style="margin-top:5px">Login</button>
        </form>
    </div>
</div>


